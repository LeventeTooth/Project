<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.MainPage">

    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="95"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Padding="2" BackgroundColor="#3B2E58" >
            <HorizontalStackLayout Grid.Row="0" Grid.Column="0">
                <VerticalStackLayout  >
                    <Entry Text="{Binding UserEmail}" 
               Placeholder="Enter Email" WidthRequest="143"
               HorizontalOptions="Fill" VerticalOptions="Fill" Margin="1"/>
                    <Label Text="{Binding Text}" TextColor="Red"/>
                </VerticalStackLayout>

                <Button Text="Enter"  WidthRequest="100"
                HorizontalOptions="Start" Padding="1,1,1,1" Command="{Binding runCommand}" Margin="5,1,1,1"/>
            </HorizontalStackLayout>
        </Border>
    </Grid>

</ContentPage>