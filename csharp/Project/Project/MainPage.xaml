<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project.MainPage">

    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <HorizontalStackLayout Padding="3">
            
        </HorizontalStackLayout>
        <Entry Text="{Binding UserEmail}" Grid.Row="0" Grid.Column="0" 
               Placeholder="Enter Email" 
               HorizontalOptions="Fill" VerticalOptions="Fill" Margin="1"/>
        
        <Button Text="Enter" Grid.Row="0" Grid.Column="1" WidthRequest="90" 
                HorizontalOptions="Start" Padding="1,1,1,1" Command="{Binding runCommand}" Margin="5,1,1,1"/>

        <Label Text="{Binding Text}" Grid.Row="1" Grid.Column="0" TextColor="Red"/>
    </Grid> 
    
</ContentPage>